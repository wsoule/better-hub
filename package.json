	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/better-auth/better-hub.git"
	},
	"homepage": "https://better-hub.com",
	"bugs": {
		"url": "https://github.com/better-auth/better-hub/issues"
